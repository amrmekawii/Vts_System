@using Microsoft.AspNetCore.Identity;
@using Vts.DAL;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
   
    
@if (SignInManager.IsSignedIn(User) && User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <a class="nav-link" style="color:black" href="/Cart/GetUsersCart">
                <span id="cartCount" class="badge text-black">0</span>
                <img src="https://www.iconpacks.net/icons/2/free-icon-shopping-cart-3045.png" style="width: 44px;height:32px; border: 1px solid white;border-radius: 100%;" />
            </a>
        </li>
   
            <li class="nav-item">
            <img class="avatar rounded-circle" height=50px alt="profile" src="https://cdn3.iconfinder.com/data/icons/avatars-collection/256/22-512.png" />
            </li>
      
        <li class="nav-item">
        <a  class="nav-link text-dark"id="username"  title="Manage"> @User.Identity?.Name!
            
        </a>
    </li>
    <li class="nav-item">
            <form asp-controller="User" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
    </li>

    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
    </li>
}
</ul>
