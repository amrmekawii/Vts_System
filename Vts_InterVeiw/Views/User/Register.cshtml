

@using Vts.BL
@model RegisterDto

<div class="container" >
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Register</h2>
                    <hr />

                    <form asp-action="Register" method="post" >
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-group">
                            <label for="userName">Username</label>
                            <input asp-for="UserName" id="userName" class="form-control" aria-required="true" placeholder="Enter your username" />
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input asp-for="Password" id="password" class="form-control" type="password" aria-required="true" placeholder="Enter your password" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input asp-for="Email" id="email" class="form-control" aria-required="true" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="text-center p-3">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}